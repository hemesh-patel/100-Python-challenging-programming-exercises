def count_dig_wor(sentance):
    dig = 0
    wor = 0
    for x in sentance:
        if x.isdigit():
            dig += 1
        elif x.isalpha():
            wor += 1
        else:
            pass
    print 'Digits:', dig
    print 'Words:', wor

count_dig_wor('ghfdgh5645')


#Alternative:

x = input('>: ')
Letters = 0
Digits = 0
for i in x:
    if i.isdigit():
        Digits += 1
    elif i.isalpha():
        Letters += 1
print('LETTERS', Letters)
print('DIGITS', Digits)
