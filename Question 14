def count_dig_wor(sentance):
    up = 0
    low = 0
    for x in sentance:
        if x.isupper():
            up += 1
        elif x.islower():
            low += 1
        else:
            pass
    print 'Uppercase letters:', up
    print 'Lowercase letters:', low

count_dig_wor('dfjvdkjKSJNDKLFH')


#Alternative:

x = input('>: ')
Upper = 0
Lower = 0
for i in x:
    if i.isupper():
        Upper += 1
    elif i.islower():
        Lower += 1
print('UPPER CASE', Upper)
print('LOWER CASE', Lower)
